@using FeePay.Core.Application.DTOs;
@model ResetPasswordViewModel
<div class="modal fade" id="changePass_admin" tabindex="-1" role="dialog" data-animodel-in="fadeIn" data-animodel-out="fadeOut" aria-labelledby="exampleModalCenter" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-0" style="background-color: transparent;">
            <button class="close theme-close" type="button" data-dismiss="modal" aria-label="Close" style="opacity:1 !important;"><span aria-hidden="true">×</span></button>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form id="changePass_adminForm" method="post" class="needs-validation" novalidate="">
                            <input type="hidden" id="CurrentPassword" name="CurrentPassword" value="admin" />
                            <input type="hidden" id="Id" name="Id" />
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="NewPassword">Password *</label>
                                        <input asp-for="NewPassword" class="form-control" type="text" placeholder="Password">
                                        <div class="invalid-feedback font-danger"><span asp-validation-for="NewPassword"></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="ConfirmPassword">Confirm Password *</label>
                                        <input asp-for="ConfirmPassword" class="form-control" type="text" placeholder="Confirm Password">
                                        <div class="invalid-feedback font-danger"><span asp-validation-for="ConfirmPassword"></span></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="d-block text-right">
                                        <a href="javascript:void(0)" data-dismiss="modal" class="btn btn-secondary">Cancel</a>
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                    <div class="d-block"><div id="form-validation-summary" class="my-2 txt-danger" style="font-size: 12px;line-height: 1;letter-spacing: 0.9px;" asp-validation-summary="All"></div></div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


