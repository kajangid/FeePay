@model RoleViewModel
@{

}
@section Style{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/vendors/datatables.css")">
}

@section Scripts{
    <script src="@Url.Content("~/Cuba/js/clipboard/clipboard.min.js")"></script>
    <script src="@Url.Content("~/Cuba/js/custom-card/custom-card.js")"></script>
    <partial name="_ValidationScriptsPartial" />
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Account")"> Administrative </a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("RoleList","Account")"> Roles </a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <form id="managerole" asp-action="RoleManage" asp-controller="Account" method="post" data-ajaxurl="@Url.Action("ManageRole","Account")" class="form theme-form needs-validation" novalidate="">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header b-r-info b-l-info border-3">
                        <h5>
                            <a asp-action="RoleList" asp-controller="Account">
                                <i class="icofont icofont-arrow-left"></i> Back To List
                            </a>
                        </h5>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa-spin fa-cog"></i></li>
                                <li><i class="icofont icofont-maximize full-card"></i></li>
                                <li><i class="icofont icofont-minus minimize-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Name">Role Name *</label>
                                    <input asp-for="Name" class="form-control" type="text" placeholder="Role name">
                                    <div class="invalid-feedback" asp-validation-for="Name"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="IsActive">
                                        <input class="checkbox_animated" asp-for="IsActive" type="checkbox"> Active
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Assign Users</label>
                            <ul class="list-group">
                                @{
                                    if (Model != null && Model.UserList != null && Model.UserList.Count > 0)
                                    {
                                        for (int i = 0; i < Model.UserList.Count; i++)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                @Model.UserList[i].Name
                                                <span class="text-right">
                                                    <label asp-for="@Model.UserList[i].IsSelected">
                                                        <input class="checkbox_animated" asp-for="@Model.UserList[i].IsSelected" type="checkbox">
                                                        <input type="hidden" asp-for="@Model.UserList[i].Name" />
                                                        <input type="hidden" asp-for="@Model.UserList[i].Id" />
                                                    </label>
                                                </span>
                                            </li>

                                        }
                                    }
                                    else
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            No User Assign To Role
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                        </div>
                    </div>
            </div>

            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="form-group mb-0 text-right"><input type="submit" class="btn btn-success mr-3" value="Add" /></div>
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col">
                                <div id="form-validation-summary" class="my-2 txt-danger" style="font-size: 12px;line-height: 1;letter-spacing: 0.9px;" asp-validation-summary="All"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</form>
</div>
