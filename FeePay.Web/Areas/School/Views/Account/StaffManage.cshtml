<div class="container-fluid">
    <form id="managestaff" asp-action="StaffManage" asp-controller="Account" method="post" class="needs-validation" novalidate="">
        <div class="row">
            <div class="col-xl-9 col-md-12 box-col-12">
                <div class="card">
                    @Html.AntiForgeryToken()
                    <input asp-for="Id" type="hidden" />
                    <div class="card-header">
                        <h5>
                            <a asp-action="StaffList" asp-controller="Account">
                                <i class="icofont icofont-arrow-left"></i> Back To List
                            </a>
                        </h5>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa-spin fa-cog"></i></li>
                                <li><i class="icofont icofont-maximize full-card"></i></li>
                                <li><i class="icofont icofont-minus minimize-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="FirstName">First Name*</label>
                                    <input class="form-control" asp-for="FirstName" type="text" placeholder="First Name">
                                    <div class="invalid-feedback" asp-validation-for="FirstName"></div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="LastName"></label>
                                    <input class="form-control" asp-for="LastName" type="text" placeholder="Last Name">
                                    <div class="invalid-feedback" asp-validation-for="LastName"></div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="PhoneNumber"> Phone Number*</label>
                                    <input class="form-control" asp-for="PhoneNumber" type="text" placeholder="phone number">
                                    <div class="invalid-feedback" asp-validation-for="PhoneNumber"></div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="Email"></label>
                                    <input class="form-control" asp-for="Email" type="email" placeholder="Email">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-3">
                                    <label class="form-label" asp-for="Password"></label>
                                    <input class="form-control" type="text" asp-for="Password" placeholder="Password (default mobile number)">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group mb-3 mb-0">
                                    <label asp-for="IsActive">
                                        <input class="checkbox_animated" asp-for="IsActive" type="checkbox"> Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-right">
                        <button class="btn btn-primary" type="submit">Update Profile</button>
                    </div>
                    <div id="form-validation-summary" class="my-2 txt-danger" style="font-size: 12px;line-height: 1;letter-spacing: 0.9px;" asp-validation-summary="All"></div>
                </div>
            </div>
            <div class="col-xl-3 box-col-6 pr-0">
                <div class="card">
                    <div class="card-header">
                        <h5>Assign Roles</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            @{
                                if (Model != null && Model.RoleList != null && Model.RoleList.Count > 0)
                                {
                                    for (int i = 0; i < Model.RoleList.Count; i++)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @Model.RoleList[i].Name
                                            <span class="text-right">
                                                <label asp-for="@Model.RoleList[i].IsSelected">
                                                    <input class="checkbox_animated" asp-for="@Model.RoleList[i].IsSelected" type="checkbox">
                                                    <input type="hidden" asp-for="@Model.RoleList[i].Name" />
                                                    <input type="hidden" asp-for="@Model.RoleList[i].Id" />
                                                </label>
                                            </span>
                                        </li>

                                    }
                                }
                                else
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        No role Assign
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>
