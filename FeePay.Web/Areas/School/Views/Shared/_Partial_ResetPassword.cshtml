@model ResetPasswordViewModel
<h6>Change Password</h6>
<hr />
<form id="resetPassword" asp-action="resetPassword" asp-controller="Home" asp-area="School" method="post" class="needs-validation" novalidate="" >
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col">
            <div class="form-group position-relative">
                <label asp-for="CurrentPassword" class="col-form-label">Current Password</label>
                <input asp-for="CurrentPassword" class="form-control" type="password" data-inputtype="password" placeholder="Current Password" data-bs-original-title="" title="">
                <div class="invalid-feedback"><span asp-validation-for="CurrentPassword"></span></div>
                <div data-onclick="showhidepass" class="input-right-icon" style="display:none"><i class="fa fa-eye-slash"></i></div>
            </div>
            <div class="form-group position-relative">
                <label asp-for="NewPassword" class="col-form-label">New Password</label>
                <input asp-for="NewPassword" class="form-control" type="password" data-inputtype="password" placeholder="New Password" data-bs-original-title="" title="">
                <div class="invalid-feedback"><span asp-validation-for="NewPassword"></span></div>
                <div data-onclick="showhidepass" class="input-right-icon" style="display:none"><i class="fa fa-eye-slash"></i></div>
            </div>
            <div class="form-group position-relative">
                <label asp-for="ConfirmPassword" class="col-form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" data-inputtype="password" placeholder="Confirm Password" data-bs-original-title="" title="">
                <div class="invalid-feedback"><span asp-validation-for="ConfirmPassword"></span></div>
                <div data-onclick="showhidepass" class="input-right-icon" style="display:none"><i class="fa fa-eye-slash"></i></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-right">
            <button class="btn btn-primary" type="submit" data-bs-original-title="" title="">Change Password</button>
        </div>
        <div class="col-sm-12">
            <div id="form-validation-summary" class="txt-danger" asp-validation-summary="All"></div>
        </div>
    </div>
</form>