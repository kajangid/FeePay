@using Microsoft.AspNetCore.Identity
@using FeePay.Core.Domain.Entities.Identity

@inject SignInManager<SuperAdminUser> SignInManager
@inject UserManager<SuperAdminUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="SuperAdmin" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="SuperAdmin" asp-controller="Account" asp-action="Profile" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
