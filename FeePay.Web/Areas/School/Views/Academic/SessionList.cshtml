@model IEnumerable<SessionViewModel>
@{
    var random = new Random();
    var ColorList = new List<string> { "primary", "secondary", "success", "info", "dark", "light", "danger", "warning" };
}

@section Style{
}
@section Scripts{
    <script>
        (function () {
            "use strict";
            $('#sessionListTable').DataTable({
                "order": [[5, 'desc']],
                columnDefs: [
                    { targets: 0, visible: true, searchable: false, orderable: false },
                    { targets: 1, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                    { targets: 2, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                    { targets: 3, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                    { targets: 4, visible: true, searchable: false, orderable: false },
                    { targets: 5, visible: true, searchable: false, orderable: false },
                    { targets: 6, visible: true, searchable: false, orderable: true, orderDataType: "dom-text" },
                    { targets: 7, visible: true, searchable: false, orderable: false },
                ]
            });
            $('#sessionListTable').reArrangeDatatableSerialNumber();
        })(jQuery);
    </script>
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Academics</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header b-r-info b-l-info border-3">
                    <h5>
                        <a asp-action="SessionAdd" asp-controller="Academic">
                            <i class="fa fa-plus"></i> Add Session
                        </a>
                    </h5>
                    <div class="card-header-right">
                        <ul class="list-unstyled card-option">
                            <li><i class="fa fa-spin fa-cog"></i></li>
                            <li><i class="icofont icofont-maximize full-card"></i></li>
                            <li><i class="icofont icofont-minus minimize-card"></i></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body" style="">
                    <div class="table-responsive">
                        <table class="hover" id="sessionListTable" data-type="datatable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Year</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <th>Modify By</th>
                                    <th>Modify date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            var color = ColorList.OrderBy(s => random.NextDouble()).First();
                                            var color1 = ColorList.OrderBy(s => random.NextDouble()).First();
                                            <tr data-key="@item.Id">
                                                <td></td>
                                                <td>@item.Year</td>
                                                <td data-order="@item.StartYear?.ToString("MMddyyyyHHmmss")">@item.StartYear?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
                                                <td data-order="@item.EndYear?.ToString("MMddyyyyHHmmss")">@item.EndYear?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture)</td>
                                                <td>
                                                    @if (item.IsActive)
                                                    {<label class="badge badge-success">Active</label>}
                                                </td>
                                                <td><a href="@Url.Action("StaffManage","Account",new { id = item.ModifyById })" class="btn btn-@(color) btn-xs">@item.ModifyBy</a></td>
                                                <td data-order="@item.ModifyDate?.ToString("MMddyyyyHHmmss")">@item.ModifyDate?.ToString("dd/MM/yyyy HH:mm", CultureInfo.InvariantCulture)</td>
                                                <td>
                                                    <a asp-action="SessionEdit" asp-controller="Academic" asp-route-id="@item.Id" data-container="body" data-toggle="popover" data-placement="top" title="Edit Session" class="d-inline-block mr-1">
                                                        <i data-feather="edit-3"></i>
                                                    </a>
                                                    <a data-action="deleterow" data-actionmag="Class" asp-action="SessionDelete" asp-controller="Academic" asp-route-id="@item.Id" data-container="body" data-toggle="popover" data-placement="top" title="Delete Session" class="d-inline-block">
                                                        <i data-feather="trash-2"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


