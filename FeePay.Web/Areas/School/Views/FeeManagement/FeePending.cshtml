@model FeePendingViewModel

@section Style{
}
@section Scripts{
    <script src="@Url.Content("~/Page_js/school/index_feesassign.js")"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            "use strict";
            $('#pendingFeesListTable').DataTable({
                "order": [[6, 'desc']],
                columnDefs: [
                    { targets: 0, visible: true, searchable: false, orderable: false },
                    { targets: 1, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                    { targets: 2, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                    { targets: 3, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                    { targets: 4, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                    { targets: 5, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                    { targets: 6, visible: true, searchable: false, orderable: true, orderDataType: "dom-text" },
                    { targets: 7, visible: true, searchable: true, orderable: true, orderDataType: "dom-text" },
                ]
            });
            //$('#pendingFeesListTable').reArrangeDatatableSerialNumber();
        })(jQuery);
    </script>
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Fee Management</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            @{ await Html.RenderPartialAsync("_Partial_SearchStudent", Model?.SearchModel); }
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="pendingFeesListTable">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        <label for="assignCkAll" style="margin: 0;">
                                            <input class="checkbox_animated" name="assignCkAll" id="assignCkAll" type="checkbox" style="margin: 0; height: 14px;">
                                        </label>
                                    </th>
                                    <th>Sr/Reg No</th>
                                    <th>Name</th>
                                    <th>Father's Name</th>
                                    <th>MobileNo</th>
                                    <th>Class | Section</th>
                                    <th>Due Date</th>
                                    <th>Amount [₹]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.StudentFeesList != null)
                                {
                                    for (int i = 0; i < Model.StudentFeesList.Count; i++)
                                    {
                                        StudentFeesViewModel fee = Model.StudentFeesList[i];
                                        StudentAdmissionViewModel student = Model.StudentFeesList[i].StudentAdmission ?? new StudentAdmissionViewModel();
                                        <tr data-key="@fee.Id">
                                            <th scope="row">
                                                <label asp-for="@Model.CbStudents[i].IsSelected" style="margin: 0;">
                                                    <input class="assign-checkbox checkbox_animated" asp-for="@Model.CbStudents[i].IsSelected" type="checkbox" style="margin: 0; height: 14px;">
                                                    <input type="hidden" asp-for="@Model.CbStudents[i].Name" />
                                                    <input type="hidden" asp-for="@Model.CbStudents[i].Id" />
                                                </label>
                                            </th>
                                            <td>@student.Sr_RegNo</td>
                                            <td>@($"{student.FirstName} {student.LastName}")</td>
                                            <td>@student.FatherName</td>
                                            <td>@student.MobileNo</td>
                                            <td>@($"{student.StudentClass?.Name}({student.StudentSection?.NormalizedName})")</td>
                                            <td data-order="@fee.DueDate?.ToString("MMddyyyyHHmmss")">@(fee.DueDate?.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture))</td>
                                            <td>@fee.FeeAmount</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>