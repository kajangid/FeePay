@using FeePay.Core.Application.Interface;
@model FeesCollerctionReportViewModel

@inject ICultureFormatProvider _cultureFormatProvider
@section Style{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/vendors/date-picker.css")">
}
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="@Url.Content("~/Cuba/js/datepicker/date-picker/datepicker.js")"></script>
    <script src="@Url.Content("~/Cuba/js/datepicker/date-picker/datepicker.en.js")"></script>
    <script>
        (function () {
            'use strict';
            $('#feeCollectionListTable').DataTable({ 'order': [[5, 'desc']] });
            $('#feeCollectionListTable').reArrangeDatatableSerialNumber();
            $('.datepicker-here').each(function (index, value) {
                var selectedDate = $(value).val();
                var selectedDateObject = new Date();
                if (selectedDate && selectedDate !== "") {
                    var split = selectedDate.split('-');
                    selectedDateObject = new Date(split[2] + '-' + split[1] + '-' + split[0]);
                }
                $(value)
                    .datepicker()
                    .data('datepicker')
                    .selectDate(selectedDateObject);
            });
        })(jQuery);
    </script>
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Fees</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate="">
                        @Html.AntiForgeryToken()
                        @{ await Html.RenderPartialAsync("_Partial_FeeCollectionSearchForm", Model?.SearchModel);}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body" style="">
                    <div class="table-responsive">
                        <table class="hover" id="feeCollectionListTable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th>Sr/Reg No</th>
                                    <th>Student</th>
                                    <th>Class</th>
                                    <th>Father Name</th>
                                    <th>MobileNo</th>
                                    <th>FeeTransactionId</th>
                                    <th>Deposit</th>
                                    <th>Discount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ if (Model != null)
                                    {
                                        foreach (var item in Model.StudentFees)
                                        {
                                            <tr>
                                                <td scope="row"></td>
                                                <td>@(item.StudentAdmission?.Sr_RegNo)</td>
                                                <td><a asp-action="StudentLedger" asp-controller="FeeManagement" asp-route-id="@(item.StudentAdmissionId)">@($"{item.StudentAdmission?.FirstName} {item.StudentAdmission?.LastName}")</a></td>
                                                <td>@($"{item.StudentAdmission?.StudentClass?.Name}({item.StudentAdmission?.StudentSection?.Name})")</td>
                                                <td>@(item.StudentAdmission?.FatherName)</td>
                                                <td>@(item.StudentAdmission?.MobileNo)</td>
                                                <td>@(item.Mode)</td>
                                                <td>@(_cultureFormatProvider.FormatCurrencyIntoIndianCalture(item.FeeAmount))</td>
                                                <td>-</td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

