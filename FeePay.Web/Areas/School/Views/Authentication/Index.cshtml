@model SchoolLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@(ViewBag.MetaDescription != null ? ViewBag.MetaDescription : "Feepay")">
    <meta name="keywords" content="@(ViewBag.MetaKeyWords != null ? ViewBag.MetaKeyWords : "Feepay")">
    <meta name="author" content="@(ViewBag.Author != null ? ViewBag.Author : "travel tech software")">
    <link rel="icon" href="@Url.Content("~/Cuba/images/favicon.png")" type="image/x-icon">
    <link rel="shortcut icon" href="@Url.Content("~/Cuba/images/favicon.png")" type="image/x-icon">
    <title>School Admin Login FeePay</title>
    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Rubik:400,400i,500,500i,700,700i&amp;display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i,900&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/fontawesome.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/vendors/themify.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/vendors/bootstrap.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/style.css")">
    <link id="color" rel="stylesheet" href="@Url.Content("~/Cuba/css/color-1.css")" media="screen">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/responsive.css")">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-5"><img class="bg-img-cover bg-center" src="~/Cuba/images/login/3.jpg" alt="looginpage"></div>
            <div class="col-xl-7 p-0">
                <div class="login-card">
                    <div>
                        <div><a class="logo text-left" href="index.html"><img class="img-fluid for-light" src="~/Cuba/images/logo/login.png" alt="looginpage"><img class="img-fluid for-dark" src="~/Cuba/images/logo/logo_dark.png" alt="looginpage"></a></div>
                        <div class="login-main">
                            <form id="login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="theme-form needs-validation" novalidate="">
                                <h4>Sign in to account</h4>
                                <p>Enter your email & password to login</p>

                                <div class="form-group">
                                    <label asp-for="SchoolUniqueId" class="col-form-label"></label>
                                    <input asp-for="SchoolUniqueId" class="form-control" type="text" required="" placeholder="#######">
                                    <div class="invalid-feedback"><span asp-validation-for="SchoolUniqueId"></span></div>
                                </div>

                                <div class="form-group">
                                    <label asp-for="UserName" class="col-form-label">User Name</label>
                                    <input asp-for="UserName" class="form-control" type="text" required="">
                                    <div class="invalid-feedback"><span asp-validation-for="UserName"></span></div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="col-form-label">Password</label>
                                    <input asp-for="Password" class="form-control" type="password" required="" placeholder="*********">
                                    <div class="invalid-feedback"><span asp-validation-for="Password"></span></div>
                                    <div class="show-hide"><span class="show"></span></div>
                                </div>
                                <div class="form-group mb-0">
                                    <div class="checkbox p-0">
                                        <input asp-for="RememberMe" type="checkbox">
                                        <label asp-for="RememberMe" class="text-muted">Remember password</label>
                                        <input asp-for="Email" type="hidden" value="test@test.com" />
                                    </div>
                                    <button class="btn btn-primary btn-block" type="submit">Sign in</button>
                                </div>
                                <div class="my-2 txt-danger" style="font-size: 12px;line-height: 1;letter-spacing: 0.9px;" asp-validation-summary="All"></div>
                                <p class="mt-4 mb-0">Don't have account?<a class="ml-2" href="sign-up.html">Create Account</a></p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script src="@Url.Content("~/Cuba/js/jquery-3.5.1.min.js")"></script>
        <script src="@Url.Content("~/Cuba/js/bootstrap/popper.min.js")"></script>
        <script src="@Url.Content("~/Cuba/js/bootstrap/bootstrap.js")"></script>
        <script src="@Url.Content("~/Cuba/js/config.js")"></script>
        <partial name="_Partial_AlertMessage" />
        <partial name="_ValidationScriptsPartial" />
        <script src="@Url.Content("~/Cuba/js/index_login.js")"></script>
    </div>
</body>
</html>
