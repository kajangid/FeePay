@using FeePay.Core.Application.Interface.Service
@model StudentAdmissionViewModel
@inject ICommanDataServices commanDataService
@{
}
@section Style{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/vendors/date-picker.css")">
}
@section Scripts{
    <script src="@Url.Content("~/Cuba/js/datepicker/date-picker/datepicker.js")"></script>
    <script src="@Url.Content("~/Cuba/js/datepicker/date-picker/datepicker.en.js")"></script>
    <script src="@Url.Content("~/Cuba/js/clipboard/clipboard.min.js")"></script>
    <script src="@Url.Content("~/Cuba/js/custom-card/custom-card.js")"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict';
            var datepicker = $('input[name="AdmissionDate"]').datepicker().data('datepicker');
            datepicker.selectDate(new Date());
            $('select[name="ClassId"]').on('change', function (e) {
                e.preventDefault();
                var $this = $(this);
                var selectSectionEle = $('select[name="SectionId"]');
                var html = '<option value="">Select</option>';
                var classId = $this.val();
                var url = selectSectionEle.attr("data-ajaxurl");
                if (classId === "") { selectSectionEle.html(html); return true; }
                $this.prop('disabled', true);
                $.ajax({
                    url: `${url}?id=${classId}`,
                    method: 'get',
                    dataType: 'json'
                }).done(function (res) {
                    if (res.success) {
                        if (res.data != null && res.data.length > 0) {
                            html += res.data.map(function (i) { return `<option value="${i.value}">${i.text}</option>`; });
                            selectSectionEle.html(html);
                        }
                    } else { }
                }).fail(function (jqXHR, textStatus) {
                    console.log("Request failed: " + textStatus);
                }).always(function () {
                    $this.prop('disabled', false);
                });
                return true;
            });
        })(jQuery);
    </script>
}
<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("StudentList","StudentAdmission")"> Students </a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <form id="manageStudentAdmission" asp-action="StudentAdd" asp-controller="StudentAdmission" method="post" class="needs-validation" novalidate="" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
