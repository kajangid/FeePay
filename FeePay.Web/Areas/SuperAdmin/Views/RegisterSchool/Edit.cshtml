@model RegisterSchoolViewModel

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("List","RegisterSchool")"> Register School </a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <form id="addRegisterSchool" method="post" class="needs-validation" novalidate="">

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header b-r-info b-l-info border-3">
                        <h5>
                            <a asp-action="List" asp-controller="RegisterSchool">
                                <i class="icofont icofont-arrow-left"></i> Back To List
                            </a>
                        </h5>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa-spin fa-cog"></i></li>
                                <li><i class="icofont icofont-maximize full-card"></i></li>
                                <li><i class="icofont icofont-minus minimize-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.AntiForgeryToken()
                        <input asp-for="Id" type="hidden" />
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Name">
                                        Name *
                                        <a href="javascript:void(0)" data-toggle="m-tooltip" data-placement="top"
                                           title="School Code will be change as school name change."
                                           data-original-title="School Code will be change as school name change.">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </label>
                                    <input asp-for="Name" class="form-control" type="text" placeholder="Name">
                                    <div class="invalid-feedback font-danger"><span asp-validation-for="Name"></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="PrincipalName">
                                        Principal Name
                                        <a href="javascript:void(0)" data-toggle="m-tooltip" data-placement="top"
                                           title="School Principal/Dean/Administrator Head Name."
                                           data-original-title="School Principal/Dean/Administrator Head Name.">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </label>
                                    <input asp-for="PrincipalName" class="form-control" type="text" placeholder="Principal Name">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="ContactNumber">
                                        Contact Number
                                        <a href="javascript:void(0)" data-toggle="m-tooltip" data-placement="top"
                                           title="School Principal/Dean/Administrator Head Contact Number."
                                           data-original-title="School Principal/Dean/Administrator Number.">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </label>
                                    <input asp-for="ContactNumber" class="form-control" type="text" placeholder="Contact Number">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Address">
                                        Address
                                        <a href="javascript:void(0)" data-toggle="m-tooltip" data-placement="top"
                                           title="School Address."
                                           data-original-title="School Address.">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </label>
                                    <textarea asp-for="Address" class="form-control" type="text" placeholder="Address"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="IsApproved">
                                        <input class="checkbox_animated" asp-for="IsApproved" type="checkbox"> Approve
                                        <a href="javascript:void(0)" class="d-inline" data-toggle="m-tooltip" data-placement="top"
                                           title="Approve to start using feepay with their login."
                                           data-original-title="Approve to start using feepay with their login.">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-block text-right">
                            <input type="submit" value="Add" class="btn btn-outline-primary" />
                        </div>
                        <div class="d-block"><div id="form-validation-summary" class="my-2 txt-danger" style="font-size: 12px;line-height: 1;letter-spacing: 0.9px;" asp-validation-summary="All"></div></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

