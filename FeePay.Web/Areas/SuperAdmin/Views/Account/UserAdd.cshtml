@model SuperAdmin_UserViewModel

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("UserList","Account")"> Users </a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid">
    <form id="addUser" method="post" class="needs-validation" novalidate="">

        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header b-r-info b-l-info border-3">
                        <h5>
                            <a asp-action="UserList" asp-controller="Account">
                                <i class="icofont icofont-arrow-left"></i> Back To List
                            </a>
                        </h5>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <li><i class="fa fa-spin fa-cog"></i></li>
                                <li><i class="icofont icofont-maximize full-card"></i></li>
                                <li><i class="icofont icofont-minus minimize-card"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName">First Name *</label>
                                    <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name">
                                    <div class="invalid-feedback font-danger"><span asp-validation-for="FirstName"></span></div>
                                </div>
                            </div>
                            <div class="col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName">Last Name</label>
                                    <input asp-for="LastName" class="form-control" type="text" placeholder="Last Name">
                                    <div class="invalid-feedback font-danger"><span asp-validation-for="LastName"></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="Email">
                                    <div class="invalid-feedback font-danger"><span asp-validation-for="Email"></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control" type="text" placeholder="Phone Number">
                                    <div class="invalid-feedback font-danger"><span asp-validation-for="PhoneNumber"></span></div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="IsActive">
                                        <input class="checkbox_animated" asp-for="IsActive" type="checkbox"> Active
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-block text-right">
                            <a asp-action="UserList" asp-controller="Account" class="btn btn-outline-secondary">Cancel</a>
                            <input type="submit" value="Save" class="btn btn-outline-primary" />
                        </div>
                        <div class="d-block"><div id="form-validation-summary" class="my-2 txt-danger" style="font-size: 12px;line-height: 1;letter-spacing: 0.9px;" asp-validation-summary="All"></div></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

