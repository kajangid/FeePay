@model IEnumerable<SuperAdmin_UserViewModel>
@{
    var random = new Random();
    var ColorList = new List<string> { "primary", "secondary", "success", "info", "dark", "light", "danger", "warning" };
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Cuba/css/vendors/datatables.css")">
}
@section PluginScripts{
    <script src="@Url.Content("~/Cuba/js/datatable/datatables/jquery.dataTables.min.js")"></script>
}
@section Scripts{
    <script>
        (function () {
            "use strict";
            $('#superUserListTable').DataTable({ "order": [[6, 'desc']] });
            $('#superUserListTable').reArrangeDatatableSerialNumber();
        })(jQuery);
    </script>
}

<div class="container-fluid">
    <div class="page-title">
        <div class="row">
            <div class="col-6">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="col-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")"> <i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("UserList","Account")"> Users </a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header b-r-info b-l-info border-3">
                    <h5>
                        <a asp-action="UserAdd" asp-controller="Account" asp-area="SuperAdmin">
                            <i class="fa fa-plus"></i> Add User
                        </a>
                    </h5>
                    <div class="card-header-right">
                        <ul class="list-unstyled card-option">
                            <li><i class="fa fa-spin fa-cog"></i></li>
                            <li><i class="icofont icofont-maximize full-card"></i></li>
                            <li><i class="icofont icofont-minus minimize-card"></i></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body" style="">
                    <div class="table-responsive">
                        <table class="hover" id="superUserListTable" data-type="datatable">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th>Name</th>
                                    <th>Username</th>
                                    <th>Phone Number</th>
                                    <th>Last Login Date</th>
                                    <th>Active</th>
                                    <th>Modify By</th>
                                    <th>Modify date</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            var color = ColorList.OrderBy(s => random.NextDouble()).First();
                                            var color1 = ColorList.OrderBy(s => random.NextDouble()).First();
                                            <tr data-key="@item.Id">
                                                <td scope="row"></td>
                                                <td>@item.FullName</td>
                                                <td>@item.UserName</td>
                                                <td>@item.PhoneNumber</td>
                                                <td>@item.LastLoginDate?.ToString("dd/MM/yyyy::hh:mm")</td>
                                                <td>
                                                    <input asp-for="@item.IsActive" type="checkbox" data-action="isactiverow"
                                                           data-ajaxurl="@Url.Action("UserActive","Account",new { id = item.Id })">
                                                </td>
                                                <td>
                                                    <a asp-action="UserProfile" asp-controller="Account" asp-route-id="@item.ModifyById"
                                                       class="btn btn-xs btn-@(color)">@item.ModifyBy</a>
                                                </td>
                                                <td>@item.ModifyDate?.ToString("dd/MM/yyyy::hh:mm")</td>
                                                <td>
                                                    <div class="d-inline" style="width:150px;">
                                                        <a asp-action="UserEdit" asp-controller="Account" asp-route-id="@item.Id"
                                                           asp-area="SuperAdmin" data-container="body" data-toggle="popover"
                                                           data-placement="top" title="Edit User" class="d-inline-block mr-1">
                                                            <i data-feather="edit-3"></i>
                                                        </a>
                                                        <a asp-action="UserProfile" asp-controller="Account" asp-route-id="@item.Id"
                                                           asp-area="SuperAdmin" data-container="body" data-toggle="popover"
                                                           data-placement="top" title="User's Profile" class="d-inline-block mr-1">
                                                            <i data-feather="user"></i>
                                                        </a>
                                                        <a data-ajaxurl="@Url.Action("UserCredentials","Account",new { id = item.Id })"
                                                           href="javascript:void(0)" data-onclilck="showPassword" data-actionmag="show credentials"
                                                           data-container="body" data-toggle="popover" data-placement="top"
                                                           title="User Login Credentials" class="d-inline-block mr-1">
                                                            <i data-feather="log-in"></i>
                                                        </a>
                                                        <a data-ajaxurl="@Url.Action("ChnageCredentials","Account",new { id = item.Id })"
                                                           href="javascript:void(0)" data-onclilck="changePasswordAdmin" data-actionmag="change credentials"
                                                           data-ajaxkey="@item.Id" data-container="body" data-toggle="popover" data-placement="top"
                                                           title="Change Credentials" class="d-inline-block mr-1">
                                                            <i data-feather="unlock"></i>
                                                        </a>
                                                        <a asp-action="UserDelete" asp-controller="Account" asp-route-id="@item.Id"
                                                           asp-area="SuperAdmin" data-action="deleterow" data-actionmag="delete user"
                                                           data-container="body" data-toggle="popover" data-placement="top"
                                                           title="Delete User" class="d-inline-block">
                                                            <i data-feather="trash-2"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Models{
    @{ await Html.RenderPartialAsync("_Area_Partial_ShowUserNamePassword"); }
    @{ await Html.RenderPartialAsync("_Area_Partial_ChangePassword", new ResetPasswordViewModel()); }
}



